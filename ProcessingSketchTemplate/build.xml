<project name="org.processing.processingsketchtemplate" default="netbeans" basedir=".">
    <description>Builds, tests, and runs the project org.processing.processingsketchtemplate.</description>
    <import file="nbproject/build-impl.xml"/>
    
    <target name="zip-template-project" description="Zip the application to the sample project">
        <property name="build.classes.dir" location="..\processing-template"/>
        <property name="templates" location="src/org/processing/processingsketchtemplate/"/>
        <zip basedir="../processing-template" destfile="${templates}/ProcessingSketchTemplateProject.zip">
            <exclude name="**/src/**/*.java"/>
            <exclude name="**/build/"/>
            <exclude name="**/dist/"/>
            <exclude name="**/nbproject/private/"/>
        </zip>
    </target>    
    
</project>
